# 'ssbt cron'
# Command to run periodically (equivalent to pull + clean + status -i)
#
core::cron(){
    core::pull >/dev/null
    core::clean >/dev/null

    if [ `core::status "-i" | tail -n +2 | wc -l` -gt 0 ]; then
        core::status "-i"
    fi
}

# 'ssbt clean'
# Cleanup archive from old backups
#
core::clean(){
    local _host _filter _type _backup _timestamp _datediff
    local _keepdaily _keepweekly _limitdaily _limitweekly _weekday

    _filter="$1"

    ls -1 "${ssbt_dir}" 2>/dev/null | \
    while read _host; do
        [ -n "${_filter}" -a "${_filter}" != "${_host}" ] && continue

        config::load "${_host}"
        config::get "_type" "type" "sftp"
        config::get "_keepdaily" "keep_daily" "3"
        config::get "_keepweekly" "keep_weekly" "2"

        core::${_type}::list "${_host}" | \
        while read _line; do
            _backup=`echo "${_line}" | cut -d^ -f1`
            _timestamp=`echo "${_line}" | cut -d^ -f2`

            _datediff=`util::datediff "${_timestamp}"`
            _limitdaily=`expr 86400 '*' ${_keepdaily}`
            _limitweekly=`expr 604800 '*' ${_keepweekly}`
            _weekday=`date -j ${_timestamp} '+%w'`

            if [ "${_datediff}" -lt "${_limitdaily}" ]; then
                util::log "${_host}" "Keep daily backup ${_backup}"
                continue
            fi

            if [ ${_keepweekly} -gt 0 -a ${_datediff} -lt 604800 -a ${_weekday} -eq 0 ]; then
                util::log "${_host}" "Keep sundays weekly backup ${_backup}"
                continue
            fi

            if [ ${_datediff} -gt 604800 -a ${_datediff} -lt ${_limitweekly} ]; then
                util::log "${_host}" "Keep weekly backup ${_backup}"
                continue
            fi

            util::log "${_host}" "Removing ${_backup} from ${_host}"
            core::${_type}::remove "${_host}" "${_backup}" || \
                util::err "Unable to remove ${_backup}"
        done
    done
}

# 'ssbt pull'
# Pull backups from a remote host
#
core::pull(){
    local _host _filter _type _precmd _postcmd

    _filter="$1"

    ls -1 "${ssbt_dir}" 2>/dev/null | \
    while read _host; do
        [ -n "${_filter}" -a "${_filter}" != "${_host}" ] && continue

        config::load "${_host}"
        config::get "_type" "type" "sftp"
        config::get "_precmd" "prepull_cmd" ""
        config::get "_postcmd" "postpull_cmd" ""

        [ -n "${_precmd}" ] && ${_precmd}

        core::${_type}::pull "${_host}"

        [ -n "${_postcmd}" ] && ${_postcmd}
    done
}

# 'ssbt status'
# Lists all hosta and their backup status
#
core::status(){
    local _outdated_only
    local _host _type _line _backup _timestamp _date_diff _date_str
    local _datediff_max

    [ "$1" = "-i" ] && _outdated_only="y"

    # pass everything below here to column(1)
    {
        printf "%s^%b\n" "NAME" "LAST BACKUP"

        ls -1 "${ssbt_dir}" 2>/dev/null | \
        while read _host; do
            config::load "${_host}"
            config::get "_type" "type" "sftp"
            config::get "_datediff_max" "frequ" "86400"

            _line=`core::${_type}::list "${_host}" | head -n 1 2>/dev/null`
            if [ -n "${_line}" ] ; then
                _backup=`echo "${_line}" | cut -d^ -f1`
                _timestamp=`echo "${_line}" | cut -d^ -f2`

                _date_diff=`util::datediff "${_timestamp}"`
                _date_str=`date -j ${_timestamp} +"%Y/%m/%d %H:%M"`

                if [ ${_date_diff} -gt ${_datediff_max} ]; then
                    _date_str="\033[0;31m${_date_str}\033[0m"
                else
                    _date_str="\033[0;32m${_date_str}\033[0m"
                fi
            else
                _diff_diff=0
                _date_str="none"
            fi

            if [ -z "${_outdated_only}" -o ${_date_diff} -gt ${_datediff_max} ]; then
                printf "%s^%b\n" "${_host}" "${_date_str}"
            fi
        done
    } | column -ts^
}

# lists details about a single host
#
core::details(){
    local _host="$1" _type _frequ _remote_user _remote_dir _local_user _local_group
    local _keep_daily _keep_weekly _rsync_flags _prepull_cmd _postpull_cmd
    local _line _backup _timestamp

    [ -z "${_host}" ] && util::err "Parameter host needs to be set"
    [ ! -d "${ssbt_dir}/${_host}" ] && util::err "Host ${_host} does not exist"

    config::load "${_host}"
    config::get "_type" "type" "sftp"
    config::get "_frequ" "frequ" "86400"
    config::get "_staging_dir" "staging_dir" "/home/backup/staging"
    config::get "_remote_user" "remote_user" "backup"
    config::get "_remote_dir" "remote_dir" "/data"
    config::get "_local_user" "local_user" "backup"
    config::get "_local_group" "local_group" "backup"
    config::get "_keep_daily" "keep_daily" "3"
    config::get "_keep_weekly" "keep_weekly" "2"
    config::get "_frequ" "frequ" "86400"
    config::get "_rsync_flags" "rsync_flags" "-av --delete"
    config::get "_prepull_cmd" "prepull_cmd" ""
    config::get "_postpull_cmd" "postpull_cmd" ""

    # pass everything below here to column(1)
    {
        printf "%s^%s\n" "CONFIG" "VALUE"

        printf "%s^%s\n" "host" "${_host}"
        printf "%s^%s\n" "type" "${_type}"
        printf "%s^%s\n" "frequ" "${_frequ}"

        printf "%s^%s\n" "remote_user" "${_remote_user}"
        printf "%s^%s\n" "remote_dir" "${_remote_dir}"

        [ "${_type}" = "sftp" ] && printf "%s^%s\n" "staging_dir" "${_staging_dir}"
        [ "${_type}" = "sftp" ] && printf "%s^%s\n" "local_user" "${_local_user}"
        [ "${_type}" = "sftp" ] && printf "%s^%s\n" "local_group" "${_local_group}"

        [ "${_type}" != "manual" -a "${_type}" != "rsync" ] && printf "%s^%s\n" "keep_daily" "${_keep_daily}"
        [ "${_type}" != "manual" -a "${_type}" != "rsync" ] && printf "%s^%s\n" "keep_weekly" "${_keep_weekly}"

        [ "${_type}" = "rsync" -o "${_type}" = "rsync+zfs" ] && printf "%s^%s\n" "rsync_flags" "${_rsync_flags}"

        [ -n "${_prepull_cmd}" ] && printf "%s^%s\n" "prepull_cmd" "${_prepull_cmd}"
        [ -n "${_postpull_cmd}" ] && printf "%s^%s\n" "postpull_cmd" "${_postpull_cmd}"
    } | column -ts^

    printf "\n"

    # pass everything below here to column(1)
    {
        printf "%s^%s\n" "BACKUP" "BACKUP DATE"

        core::${_type}::list "${_host}" | \
        while read _line; do
            _backup=`echo "${_line}" | cut -d^ -f1`
            _timestamp=`echo "${_line}" | cut -d^ -f2`

            printf "%s^%s\n" "${_backup}" "`date -j ${_timestamp} +"%Y/%m/%d %H:%M"`"
        done
    } | column -ts^
}
